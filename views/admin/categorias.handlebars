<h2> Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success"> Nova categoria </button></a>


{{#each categorias}}

<div class="card mt-4">
    <div class="card-body">
        <h4> NOME: {{nome}}</h4>
        <small>SLUG: {{slug}}</small>
        <small>DATA DE CRIAÇÃO: {{date}}</small><br><br>
        <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Editar categoria</button></a>
        <form action="/admin/categorias/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar</button>
        </form>
    </div>
</div>

{{else}}
<h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}